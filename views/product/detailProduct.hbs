<div class="container">
  <div class="col-lg-8 border p-3 main-section bg-white">
    <div class="row m-0">
      <div class="col-lg-4 left-side-product-box pb-3">
        <img src="{{cover_link}}" class="border p-3" />
        <span class="sub-img">
          {{#each sub_images}}
            <img src="{{this.image_link}}" class="border p-2" />
          {{/each}}
        </span>
      </div>
      <div class="col-lg-8">
        <div class="right-side-pro-detail border p-3 m-0">
          <div class="row">
            <div class="col-lg-12">
              <span><a href="">{{Detail.category_name}}</a></span>
              <p class="m-0 p-0">{{Detail.product_name}}</p>
            </div>
            <div class="col-lg-12">
              <p class="m-0 p-0 price-pro">{{Detail.price}}</p>
              <hr class="p-0 m-0" />
            </div>
            <div class="col-lg-12 pt-2">
              <h5>Mô tả</h5>
              <span>{{Detail.description}}</span>
              <hr class="m-0 pt-2 mt-2" />
            </div>
            <div class="col-lg-12">
              <p class="tag-section"><strong>Tác giả : </strong><a
                  href=""
                >{{Detail.author_name}}</a></p>
            </div>
            <div class="col-lg-12">
              <p class="tag-section"><strong>Nhà xuất bản : </strong><a
                  href=""
                >{{Detail.publisher_name}}</a></p>
            </div>
            <div class="col-lg-12">
              <p class="tag-section"><strong>Số lượng trong kho :
                </strong>{{Detail.stock}}</p>
            </div>
            <div class="col-lg-12">
              <p class="tag-section"><strong>Tình trạng :
                </strong>{{Detail.is_active}}</p>
              <hr class="m-0 pt-2 mt-2" />
            </div>
          </div>
        </div>
      </div>
    </div>
