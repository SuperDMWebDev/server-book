
          <!-- Page Heading -->
          <!-- DataTales Example -->
          <div class="card shadow mb-4 top-45">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Account List</h6>
            </div>
            <div class="card-body">

              <div class="table-responsive">
                <table
                  class="table table-bordered"
                  id="dataTable"
                  width="100%"
                  cellspacing="0"
                >
                  <button className="cursor add_button" onClick=window.location.href="/account/add">Add new account </button> 

                  <thead>
                    <tr>
                      <th>UserName</th>
                      <th>FullName</th>
                      <th>Phone</th>
                      <th>Role_id</th>
                      <th>Account_status</th>
                      <th>

                    </tr>
                    <tbody>
                      {{#each allAccounts}}
                        <tr>
                          {{#with this}}
                            <td>{{username}}</td>
                            <td>{{firstname}} {{lastname}}</td>
                            <td>{{phone}}</td>
                            <td>{{role_id}}</td>
                            <td>{{account_status}} </td>
                            <td>
                              <div>
                                <a class="cursor" href="account/edit/{{account_id}}">
                                  <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a class="cursor" href="/account/delete/{{account_id}}">
                                  <i class="fa-solid fa-trash"></i>
                                </a>
                              </div>
                            </td>

                          {{/with}}
                        </tr>
                      {{/each}}
                    </tbody>
                  </thead>

                </table>
              </div>
            </div>
          </div>