
<div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Tables</h1>
          <p class="mb-4">DataTables is a third party plugin that is used to
            generate the demo table below. For more information about
            DataTables, please visit the
            <a target="_blank" href="https://datatables.net">official DataTables
              documentation</a>.</p>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <form action="/product/update" method="POST">
            <div class="button_container">
            <button  id="update-button"  type="submit" class="update-button">Update Status</button>
            <a href="/product/add">
            <input id="add-button" type="button" value="Add product"/>
            </a>
            </div>
            <div class="card-body">

              <div class="table-responsive">
                <table
                  class="table table-bordered"
                  id="dataTable"
                  width="100%"
                  cellspacing="0"
                >

                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Product name</th>
                      <th>description</th>
                      <th>Price</th>
                      <th>Product_status</th>

                    </tr>
                    <tbody>
                      {{#each allProducts}}
                        <tr>
                          {{#with this}}
                            <td>{{product_id}}</td>
                            <td>{{product_name}}</td>
                            <td>{{description}}</td>
                            <td>{{price}}</td>
                            {{#if (isActive is_active)}}
                              <td style="display:flex; flex-direction: row; align-items: center; justify-content: space-between"><input
                                  type="checkbox" 
                                  style="flex:1" 
                                  id=cb{{product_id}}
                                  class="check-status"
                                  name=cb{{product_id}}
                                  checked
                                />
                                
                                   <div>
                                    <a href="product/detail/{{product_id}}">
                                      <i class="fa-solid fa-eye"></i>                                    
                                    </a>
                                </div>
                                </td>
                               
                            {{else}}
                              <td style="display:flex; flex-direction: row; align-items: center; justify-content: space-between"><input
                                  type="checkbox" 
                                  style="flex:1" 
                                   id=cb{{product_id}}
                                    name=cb{{product_id}}
                                  class="check-status"
                                />
                                   <div>
                                    <a href="product/detail/{{product_id}}">
                                      <i class="fa-solid fa-eye"></i>                                    
                                    </a>
                                </div>
                                </td>
                            {{/if}}

                          {{/with}}
                        </tr>
                      {{/each}}
                    </tbody>
                  </thead>

                </table>
              </div>
            </div>
            </form>
          </div>
</div>

      