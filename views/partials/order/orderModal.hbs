

<!-- Confirm remove modal -->
<div class="modal fade" id="removeModal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="removeModalHead" class="modal-title" style="font-size: 20px;">Cancel order</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="removeModalMsg" class="modal-body">
          Are you sure to cancel order ...?
        
      </div>
      <div class="modal-footer">
        <button id="btnRemove" type="button" class="btn btn__conf btn-light" background="#eee" style="font-size: 15px">Yes</button>
        <button type="button" class="btn btn-secondary btn__conf btn-danger" style="font-size: 15px" data-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>

<!-- Form remove ẩn -->
<form name="removeForm" method="POST" action=""></form>


<!-- Update modal -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" width="100%">
  <div class="modal-dialog modal-lg" >
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="updateModalHead" class="modal-title" style="font-size: 20px;">Update order</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form name="updateForm" method="post" action="">
          <div class="form-group row">
            <label class="col-sm-4 col-form-label">ID</label>
            <div class="col-sm-8">
              <input id="modalUId" type="text" readonly class="form-control-plaintext" style="font-size: 15px;">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-4 col-form-label">Phone number</label>
            <div class="col-sm-8">
              <input id="modalUPhone" type="text" class="form-control" require style="font-size: 15px;" name="o_phone">
            </div>
          </div>

          <div id="formBack1" role="alert">
          </div>

          <div class="form-group row">
            <label class="col-sm-4 col-form-label">Street</label>
            <div class="col-sm-8">
              <input id="modalUA" type="text" class="form-control" require style="font-size: 15px;" name="o_a">
            </div>
          </div>

          <div id="formBack2" role="alert">
          </div>
          <div class="form-select-add form-item">
            <div class="form-group row">
              <label class="col-sm-4 col-form-label">Province</label>
                <select  type="text" class="form-select form-province" style="font-size: 15px;" name="o_p">
                  <option id="modalUP">
                    
                  </option>
                </select>
            </div>
            
            <div id="formBack3" role="alert">
            </div>

            <div class="form-group row">
              <label class="col-sm-4 col-form-label">District</label>
                <select  type="text" class="form-select form-district" style="font-size: 15px;" name="o_d">
                  <option id="modalUD">
                    
                  </option>
                </select>
            </div>

            <div id="formBack4" role="alert">
            </div>

            <div class="form-group row ">
              <label class="col-sm-4 col-form-label">Ward</label>
                <select  type="text" class="fform-select form-ward" require style="font-size: 15px;" name="o_w">
                  <option id="modalUW">

                  </option>
                </select>
            </div>
            <div id="formBack5" role="alert">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-4 col-form-label">Status</label>
            <div class="col-sm-6 checkbox__radio--owner">
              <div class="primary">
                <input class="checkbox__radio--item" id="checked" name="o_status" value="1" type="radio" class="form-control" style="font-size: 15px;" 
                >
                <label>Đã xác nhận</label>
              </div>
              <div class="secondary">
                <input class="checkbox__radio--item" id="shipping"  name="o_status" value ="2" type="radio" class="form-control" style="font-size: 15px;"
                >
                <label>Đang giao</label>
              </div>
              <div class="secondary">
                <input class="checkbox__radio--item" id="shipped"  name="o_status" value ="3" type="radio" class="form-control" style="font-size: 15px;"
                >
                <label>Đã giao</label>
              </div>
            </div>
          </div>

          <div id="formBack6" role="alert">
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button id="btnUpdate" type="button" class="btn btn-success" style="font-size: 15px">Save changes</button>
        <button type="button" class="btn btn-secondary" style="font-size: 15px" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
  </div>
</div>

