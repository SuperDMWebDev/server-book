 <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Tables</h1>
          <p class="mb-4">DataTables is a third party plugin that is used to
            generate the demo table below. For more information about
            DataTables, please visit the
            <a target="_blank" href="https://datatables.net">official DataTables
              documentation</a>.</p>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">

              <div class="table-responsive">
                <table
                  class="table table-bordered"
                  id="dataTable"
                  width="100%"
                  cellspacing="0"
                >
                  <button className="add_button" onClick=window.location.href="/account/add">Add new account </button> 

                  <thead>
                    <tr>
                      <th>UserName</th>
                      <th>FullName</th>
                      <th>Phone</th>
                      <th>Role_id</th>
                      <th>Account_status</th>

                    </tr>
                    <tbody>
                      {{#each allAccounts}}
                        <tr>
                          {{#with this}}
                            <td>{{username}}</td>
                            <td>{{firstname}} {{lastname}}</td>
                            <td>{{phone}}</td>
                            <td>{{role_id}}</td>
                            <td>{{account_status}}
                              <div>
                                <a href="account/edit/{{account_id}}">
                                  <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="account/delete/{{account_id}}">
                                  <i class="fa-solid fa-trash"></i>
                                </a>
                              </div>
                            </td>

                          {{/with}}
                        </tr>
                      {{/each}}
                    </tbody>
                  </thead>

                </table>
              </div>
            </div>
          </div>

        </div>