
  
  <!-- Page Heading -->

  <!-- DataTales Example -->
  <div class="card shadow mb-4 top-45">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Comment List</h6>
    </div>
    <div class="card-body">

      <div class="table-responsive">
        <table
          class="table table-bordered"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >

          <thead>
            <tr>
              <th>Username</th>
              <th>Product Id</th>
              <th>Comment content</th>
              <th>Comment time</th>
              <th>Manage</th>

            </tr>
            <tbody>
              {{#each allComments}}
                <tr>
                  {{#with this}}
                    <td>{{username}}</td>
                    <td>{{product_id}}</td>
                    <td>{{comment_body}}</td>
                    <td>{{comment_time}}</td>
                    <td>
                      <div>
                          <a class="cursor" href="product/detail/{{product_id}}">
                            <i class="fa-solid fa-eye"></i>                                    
                          </a>
                        <a class="cursor" href="comment/delete/{{comment_id}}">
                          <i class="fa-solid fa-trash"></i>
                        </a>
                      </div>
                    </td>

                  {{/with}}
                </tr>
              {{/each}}
            </tbody>
          </thead>

        </table>
      </div>
    </div>
  </div>
